
<h2 class="docs-md__h2">
  <b>EmberKeyNavigation Component with custom nav item component</b>
</h2>

{{#docs-demo class="input-test" as |demo|}}
  {{#demo.example name="demo3-example.hbs"}}
    <EmberKeyNavigation @navigationItem="myOwnNavItem" @model={{this.results}} as |navigationWrapper|>
      <div class="mb-1">
        <Input @class="form-control" @type="search" @autofocus="true" @value={{this.search_text}} @autocomplete="off" @placeholder="Search" />
      </div>
      <div class="navigation-list-container list-group">
        {{#each this.results as |result|}}
          <navigationWrapper.item @class="list-group-item list-group-action" @model={{result}} @onSelect={{action doStuff}} />
        {{/each}}
      </div>
    </EmberKeyNavigation>
  {{/demo.example}}

